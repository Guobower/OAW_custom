<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>



    <record id="product_template_search_view_z10" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_offer.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='received_two_weeks']" position="after">
                <filter name="updated_c24_one_week" string="C24 updated in 7 days" domain="[('updated_c24_date','&gt;=',(context_today()+datetime.timedelta(days=-7)).strftime('%Y-%m-%d'))]"/>
           </xpath>
        </field>
    </record>

    <record id="product_template_search_view_z11" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_offer.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='available']" position="after">
                <filter name="c24_unset" string="No C24" domain="[('chrono', '=', False)]"/>
           </xpath>
        </field>
    </record>


</data>
</openerp>
