<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

     <!--For c24-Filter: Needs to be in different group in order to be ANDed-->
    <record id="product_product_tree_view_z2" model="ir.ui.view">
        <field name="name">product.template.listview</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product_listprice_list_view.product_product_tree_view_z1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount']" position="after">
                <field name="chrono24_price"/>
           </xpath>
        </field>
    </record>



    <record id="product_template_search_view_z10" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_offer.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='received_today']" position="before">
                <!-- For filter New Stock Entry 24-->
                <filter name="new_entry_date" string="New Stock Entry 24" domain="[('new_entry_date','&gt;=',(context_today()+datetime.timedelta(hours=-24)).strftime('%Y-%m-%d'))]"/>
                <!-- For filter Sales HKD Price Up-->
                <filter name="sales_hkd_price_up" string="Sale HKD Price Up" domain="[('price_up_date','&gt;=',(context_today()+datetime.timedelta(hours=-24)).strftime('%Y-%m-%d'))]"/>
                <!-- For filter Sales HKD Price Down -->
                <filter name="sales_hkd_price_down" string="Sale HKD Price Down" domain="[('price_down_date','&gt;=',(context_today()+datetime.timedelta(hours=-24)).strftime('%Y-%m-%d'))]"/>
           </xpath>
           <xpath expr="//filter[@name='received_two_weeks']" position="after">
                <!-- Overseas and VCI Currency Amount Price Change in 24h -->
                <filter name="currency_price_change_date" string="Overseas VCI Price Change in 24h" domain="[('currency_price_change_date','&gt;=',(context_today()+datetime.timedelta(hours=-24)).strftime('%Y-%m-%d'))]"/>
               <!-- For Retail HKD 24 change filter-->
                <filter name="list_price_change_date" string="Retail HKD change in 24h" domain="[('list_price_change_date','&gt;=',(context_today()+datetime.timedelta(hours=-24)).strftime('%Y-%m-%d'))]"/>
               <!-- For c24 Date Filter -->
               <!-- For c24 updated filter-->
               <!--<filter name="Chrono24 Updated" string="Chrono24 Updated" domain="[('chrono24_updated','=',True)]"/>-->
            </xpath>
        </field>
    </record>

    <!--For c24-Filter: Needs to be in different group in order to be ANDed-->
    <record id="product_template_search_view_z11" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_offer.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='available']" position="after">
                <filter name="c24_unset" string="No C24" domain="[('chrono', '=', False)]"/>
           </xpath>
        </field>
    </record>


    <!-- New Button for posting Chrono24 as relevant for Sales Deparment-->
    <record id="product_template_form_view_chrono24" model="ir.ui.view">
        <field name="name">product.template.common.form.advanced</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_product_variant']" position="after">
                    <button name="updated_chrono24_date_button" string="Chrono24 Notice Updated" type="object" groups="base.group_sale_manager"/>
            </xpath>
            <!--<xpath expr="//field[@name='active']" position="after">-->
                <!--<field name="updated_date_chrono24"/>-->
            <!--</xpath>-->
        </field>
    </record>


</data>
</openerp>
